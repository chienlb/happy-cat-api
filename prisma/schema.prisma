generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserStatus {
  ACTIVE
  INACTIVE
  PENDING
  BLOCKED
  DELETED
}

enum UserTypeAccount {
  EMAIL
  GOOGLE
  FACEBOOK
  OTHER
}

enum UserGender {
  MALE
  FEMALE
  OTHER
}

enum UserLanguage {
  VI
  EN
}

enum UserTheme {
  LIGHT
  DARK
}

enum UserFont {
  DEFAULT
  SERIF
  SANS_SERIF
}

enum UserCurrency {
  VND
  USD
  EUR
  JPY
}

enum PackageType {
  FREE
  STANDARD
  PREMIUM
  VIP
}


model User {
  id                       String   @id @default(cuid())
  fullname                 String
  username                 String   @unique
  email                    String   @unique
  password                 String
  birthDate                DateTime?
  role                     UserRole
  slug                     String   @unique
  avatar                   String?
  cover                    String?
  phone                    String
  gender                   UserGender
  language                 UserLanguage?
  province                 String?
  parentId                 String?
  teacherId                String?
  typeAccount              UserTypeAccount
  googleId                 String?   @unique
  facebookId               String?   @unique
  accountPackage           PackageType
  isVerify                 Boolean   @default(false)
  codeVerify               String?
  tokenVerify              String?
  refCode                  String?   @unique
  invitedById              String?
  exp                      Int?      @default(0)
  streakDays               Int?      @default(0)
  progressLevel            Int?
  totalLessonsCompleted    Int?      @default(0)
  theme                    UserTheme?
  currency                 UserCurrency?
  enableNotifications      Boolean?  @default(true)
  enableNotificationEmails Boolean?  @default(true)
  status                   UserStatus @default(ACTIVE)
  lastLoginAt              DateTime?
  createdById              String?
  updatedById              String?
  createdAt                DateTime  @default(now())
  updatedAt                DateTime  @updatedAt

  @@index([email])
  @@index([username])
}

enum UserRole {
  ADMIN
  TEACHER
  STUDENT
  PARENT
}